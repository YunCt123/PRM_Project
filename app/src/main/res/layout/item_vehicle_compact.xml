<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_vehicle_image"
            android:layout_width="72dp"
            android:layout_height="56dp"
            android:scaleType="centerCrop"
            android:src="@drawable/xe3"
            android:contentDescription="@string/vehicle_image_desc" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tv_vehicle_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sample_vehicle_name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/gray_900" />

            <TextView
                android:id="@+id/tv_vehicle_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sample_vehicle_details"
                android:textSize="12sp"
                android:textColor="@color/gray_600" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sample_price"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primary_blue" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="@string/view_label"
                android:textSize="12sp"
                style="@style/Widget.MaterialComponents.Button"
                android:textColor="@color/white"
                android:layout_marginTop="6dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
