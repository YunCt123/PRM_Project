<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardBookingHistory"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Vehicle Image -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="8dp"
            app:strokeWidth="0dp">

            <ImageView
                android:id="@+id/ivVehicleHistory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_car_placeholder"
                android:contentDescription="Vehicle image" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Booking Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tvVehicleNameHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Honda SH 2024"
                android:textColor="@color/gray_900"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvVehicleInfoHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Honda SH • 2024"
                android:textColor="@color/gray_600"
                android:textSize="13sp"
                android:layout_marginTop="2dp"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvDateRangeHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01/11/2024 - 05/11/2024"
                android:textColor="@color/gray_700"
                android:textSize="13sp"
                android:layout_marginTop="4dp"
                android:drawableStart="@drawable/ic_calendar_24dp"
                android:drawablePadding="4dp"
                android:drawableTint="@color/gray_600"
                android:gravity="center_vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvTotalPriceHistory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="500.000 ₫"
                    android:textColor="@color/primary_blue"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/tvStatusHistory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hoàn thành"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:background="@drawable/bg_status_badge"
                    android:textColor="@color/green_500" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

