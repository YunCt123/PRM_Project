<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/gray_200"
    app:strokeWidth="1dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Vehicle Image and Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <ImageView
                    android:id="@+id/ivVehicleImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/vehicle_image_desc"
                    android:background="@color/gray_100" />

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvVehicleName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tesla Model 3"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_900"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/tvBookingId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="ID: #12345"
                    android:textSize="13sp"
                    android:textColor="@color/gray_500" />

                <TextView
                    android:id="@+id/tvBookingStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Đang hoạt động"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_blue"
                    android:background="@drawable/status_badge_background"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/gray_200" />

        <!-- Booking Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/gray_50"
            android:padding="12dp">

            <!-- Pickup Date & Time -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày nhận"
                    android:textSize="11sp"
                    android:textColor="@color/gray_500"
                    android:textStyle="bold"
                    android:textAllCaps="true" />

                <TextView
                    android:id="@+id/tvPickupDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="01/11/2025"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_900"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/tvPickupTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="10:00 AM"
                    android:textSize="13sp"
                    android:textColor="@color/gray_600" />

            </LinearLayout>

            <!-- Arrow Icon -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_chevron_right_24dp"
                android:contentDescription="to"
                app:tint="@color/gray_400" />

            <!-- Return Date & Time -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày trả"
                    android:textSize="11sp"
                    android:textColor="@color/gray_500"
                    android:textStyle="bold"
                    android:textAllCaps="true" />

                <TextView
                    android:id="@+id/tvReturnDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="05/11/2025"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_900"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/tvReturnTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="10:00 AM"
                    android:textSize="13sp"
                    android:textColor="@color/gray_600" />

            </LinearLayout>

        </LinearLayout>

        <!-- Total Price Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:background="@drawable/price_background"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tổng tiền"
                android:textSize="14sp"
                android:textColor="@color/gray_600"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$360"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/primary_blue"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewDetails"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Chi tiết"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/primary_blue"
                android:backgroundTint="@color/white"
                app:cornerRadius="8dp"
                app:strokeColor="@color/primary_blue"
                app:strokeWidth="1.5dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancelBooking"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="12dp"
                android:text="Hủy đơn"
                android:textSize="14sp"
                android:textStyle="bold"
                android:backgroundTint="@color/primary_blue"
                android:textColor="@color/white"
                app:cornerRadius="8dp"
                style="@style/Widget.MaterialComponents.Button" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
