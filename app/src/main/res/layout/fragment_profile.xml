<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".ui.profile.ProfileFragment">

    <!-- Top bar with back arrow and centered title -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/ivBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/chevron_desc"
            app:tint="@color/gray_900" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/title_profile"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/gray_900" />

        <!-- spacer to keep title centered -->
        <View
            android:layout_width="48dp"
            android:layout_height="48dp" />

    </LinearLayout>

    <!-- Cover image (added so FragmentProfileBinding has ivCover) -->
    <ImageView
        android:id="@+id/ivCover"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/profile_cover_desc"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Avatar and name/email -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/ivCover"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:src="@drawable/user"
            android:contentDescription="@string/profile_avatar"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_circle_light"
            android:padding="6dp" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/gray_900"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_subtitle"
            android:textSize="14sp"
            android:textColor="@color/gray_600"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Menu list -->
    <LinearLayout
        android:id="@+id/menuList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Single menu item template -->
        <LinearLayout
            android:id="@+id/llMyProfile"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/user"
                app:tint="@color/gray_700"
                android:contentDescription="@string/profile_avatar" />

            <TextView
                android:id="@+id/tvMyProfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/my_profile"
                android:textSize="16sp"
                android:textColor="@color/gray_900"
                android:layout_marginStart="14dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_home_black_24dp"
                app:tint="@color/gray_400"
                android:contentDescription="@string/chevron_desc" />
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/gray_100" />

        <LinearLayout
            android:id="@+id/llSettings"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_search_24dp"
                app:tint="@color/gray_700"
                android:contentDescription="@string/account_icon_desc" />

            <TextView
                android:id="@+id/tvSettings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/settings"
                android:textSize="16sp"
                android:textColor="@color/gray_900"
                android:layout_marginStart="14dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_home_black_24dp"
                app:tint="@color/gray_400"
                android:contentDescription="@string/chevron_desc" />
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/gray_100" />

        <LinearLayout
            android:id="@+id/llNotifications"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_search_24dp"
                app:tint="@color/gray_700"
                android:contentDescription="@string/notifications_icon_desc" />

            <TextView
                android:id="@+id/tvNotifications"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/notifications"
                android:textSize="16sp"
                android:textColor="@color/gray_900"
                android:layout_marginStart="14dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_home_black_24dp"
                app:tint="@color/gray_400"
                android:contentDescription="@string/chevron_desc" />
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/gray_100" />

        <LinearLayout
            android:id="@+id/llTransactions"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_location_24dp"
                app:tint="@color/gray_700"
                android:contentDescription="@string/my_address_icon_desc" />

            <TextView
                android:id="@+id/tvTransactions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/transaction_history"
                android:textSize="16sp"
                android:textColor="@color/gray_900"
                android:layout_marginStart="14dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_home_black_24dp"
                app:tint="@color/gray_400"
                android:contentDescription="@string/chevron_desc" />
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/gray_100" />

        <LinearLayout
            android:id="@+id/llFAQ"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_search_24dp"
                app:tint="@color/gray_700"
                android:contentDescription="@string/notifications_icon_desc" />

            <TextView
                android:id="@+id/tvFAQ"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/faq"
                android:textSize="16sp"
                android:textColor="@color/gray_900"
                android:layout_marginStart="14dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_home_black_24dp"
                app:tint="@color/gray_400"
                android:contentDescription="@string/chevron_desc" />
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/gray_100" />

        <LinearLayout
            android:id="@+id/llAbout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_search_24dp"
                app:tint="@color/gray_700"
                android:contentDescription="@string/notifications_icon_desc" />

            <TextView
                android:id="@+id/tvAbout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/about_app"
                android:textSize="16sp"
                android:textColor="@color/gray_900"
                android:layout_marginStart="14dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_home_black_24dp"
                app:tint="@color/gray_400"
                android:contentDescription="@string/chevron_desc" />
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/gray_100" />

        <!-- Logout item with red text -->
        <LinearLayout
            android:id="@+id/llLogout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home_black_24dp"
                app:tint="@color/gray_700"
                android:contentDescription="@string/chevron_desc" />

            <TextView
                android:id="@+id/tvLogout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/logout"
                android:textSize="16sp"
                android:textColor="@color/primary_blue"
                android:layout_marginStart="14dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
