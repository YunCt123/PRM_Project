<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".ui.profile.ProfileFragment">

    <!-- Header xanh với tên và email -->

    <!-- Thống kê chuyến đi và quãng đường -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@color/primary_blue"
        android:clipToOutline="true"
        android:elevation="2dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:outlineProvider="background"
        android:paddingStart="16dp"
        android:paddingTop="32dp"
        android:paddingEnd="16dp"
        android:paddingBottom="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Name: Phuoc"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Email: phuoc@gmail.com"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Danh sách tài khoản -->

    <!-- Nút Đăng xuất -->
    <LinearLayout
        android:id="@+id/statsRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header">

        <!-- Chuyến đi -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_card"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="12dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="Chuyến đi"
                android:src="@drawable/ic_bike"
                app:tint="@color/primary_blue" />

            <TextView
                android:id="@+id/tvRidesCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="42"
                android:textColor="@color/gray_900"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chuyến đi"
                android:textColor="@color/gray_600"
                android:textSize="13sp" />
        </LinearLayout>

        <Space
            android:layout_width="12dp"
            android:layout_height="0dp" />

        <!-- Quãng đường -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="146dp"
            android:layout_weight="1"
            android:background="@drawable/bg_card"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="12dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="Quãng đường"
                android:src="@drawable/ic_speed"
                app:tint="@color/primary_blue" />

            <TextView
                android:id="@+id/tvDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="156.8 km"
                android:textColor="@color/gray_900"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quãng đường"
                android:textColor="@color/gray_600"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menuList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="12dp"
        android:background="@android:color/white"
        android:clipToOutline="true"
        android:elevation="1dp"
        android:orientation="vertical"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statsRow">

        <!-- Mục tài khoản, mỗi mục là LinearLayout -->
        <include
            android:id="@+id/llVerify"
            layout="@layout/item_profile_menu" />

        <include
            android:id="@+id/llHistory"
            layout="@layout/item_profile_menu" />

        <include
            android:id="@+id/llPayment"
            layout="@layout/item_profile_menu" />

        <include
            android:id="@+id/llSettings"
            layout="@layout/item_profile_menu" />

        <include
            android:id="@+id/llSupport"
            layout="@layout/item_profile_menu" />

        <include
            android:id="@+id/llAbout"
            layout="@layout/item_profile_menu" />
    </LinearLayout>

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Đăng xuất"
        android:textColor="@color/red"
        android:background="@drawable/bg_logout_button"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/menuList"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
