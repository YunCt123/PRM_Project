<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:elevation="2dp"
            android:padding="16dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_circle_button"
                android:src="@drawable/ic_chevron_left_24dp"
                android:contentDescription="Quay lại"
                app:tint="@color/gray_900"
                android:padding="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Đặt xe &amp; Thanh toán"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/gray_900"
                android:fontFamily="sans-serif-medium"
                android:layout_marginStart="12dp" />

        </LinearLayout>

        <!-- Vehicle Details Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeColor="@color/gray_200"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chi tiết thuê xe"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_900"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="16dp" />

                <!-- Vehicle Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Xe thuê"
                        android:textSize="14sp"
                        android:textColor="@color/gray_600" />

                    <TextView
                        android:id="@+id/tvVehicleName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tesla Model 3"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray_900" />

                </LinearLayout>

                <!-- Rental Type Selection -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loại thuê"
                    android:textSize="14sp"
                    android:textColor="@color/gray_600"
                    android:layout_marginBottom="8dp" />

                <RadioGroup
                    android:id="@+id/rgRentalType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <RadioButton
                        android:id="@+id/rbDaily"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Theo ngày"
                        android:textSize="14sp"
                        android:checked="true"
                        android:buttonTint="@color/primary_blue" />

                    <RadioButton
                        android:id="@+id/rbHourly"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Theo giờ"
                        android:textSize="14sp"
                        android:buttonTint="@color/primary_blue" />

                </RadioGroup>

                <!-- Start Date Time -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày giờ bắt đầu"
                    android:textSize="14sp"
                    android:textColor="@color/gray_600"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvStartDateTime"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_input_field"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="Chọn ngày giờ bắt đầu"
                    android:textSize="14sp"
                    android:textColor="@color/gray_900"
                    android:drawableEnd="@drawable/ic_time"
                    android:drawablePadding="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginBottom="12dp" />

                <!-- Hourly Duration Input (only visible when "Theo giờ" selected) -->
                <TextView
                    android:id="@+id/tvHourlyDurationLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số giờ thuê"
                    android:textSize="14sp"
                    android:textColor="@color/gray_600"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/etHourlyDuration"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_input_field"
                    android:hint="Nhập số giờ (VD: 2, 5, 12)"
                    android:inputType="number"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textSize="14sp"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone" />

                <!-- End Date Time (only visible when "Theo ngày" selected) -->
                <TextView
                    android:id="@+id/tvEndDateTimeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày giờ kết thúc"
                    android:textSize="14sp"
                    android:textColor="@color/gray_600"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvEndDateTime"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_input_field"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="Chọn ngày giờ kết thúc"
                    android:textSize="14sp"
                    android:textColor="@color/gray_900"
                    android:drawableEnd="@drawable/ic_time"
                    android:drawablePadding="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginBottom="12dp" />

                <!-- Duration Display (Auto calculated) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Thời gian thuê"
                        android:textSize="14sp"
                        android:textColor="@color/gray_600" />

                    <TextView
                        android:id="@+id/tvDurationCalculated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 ngày 0 giờ"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_blue" />

                </LinearLayout>

                <!-- Pickup Location -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Địa điểm nhận xe"
                    android:textSize="14sp"
                    android:textColor="@color/gray_600"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvPickupLocation"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_input_field"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="EV Station - Nguyen Hue"
                    android:textSize="14sp"
                    android:textColor="@color/gray_900"
                    android:drawablePadding="8dp"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Payment Methods Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeColor="@color/gray_200"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phương thức thanh toán"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_900"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="16dp" />

                <!-- PayOS Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardPayOS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/primary_blue"
                    app:strokeWidth="2dp"
                    app:cardBackgroundColor="@color/white"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_credit_card"
                            android:contentDescription="PayOS"
                            app:tint="@color/primary_blue" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="PayOS"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/gray_900"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="Thanh toán online qua ví điện tử"
                                android:textSize="12sp"
                                android:textColor="@color/gray_500" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Order Summary Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeColor="@color/gray_200"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tổng kết"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_900"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="16dp" />

                <!-- Unit Price -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Đơn giá"
                        android:textSize="14sp"
                        android:textColor="@color/gray_600" />

                    <TextView
                        android:id="@+id/tvUnitPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="22đ/giờ"
                        android:textSize="14sp"
                        android:textColor="@color/gray_900" />

                </LinearLayout>

                <!-- Rental Duration -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Thời gian thuê"
                        android:textSize="14sp"
                        android:textColor="@color/gray_600" />

                    <TextView
                        android:id="@+id/tvRentalDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4 giờ"
                        android:textSize="14sp"
                        android:textColor="@color/gray_900" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_200"
                    android:layout_marginBottom="16dp" />

                <!-- Total -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tổng cộng"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray_900"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tvTotalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="88đ"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_green"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Confirm Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnProceedPayment"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Xác nhận đặt xe"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="@color/gray_300"
            android:textColor="@color/gray_500"
            app:cornerRadius="12dp"
            android:layout_margin="16dp"
            android:enabled="false"
            style="@style/Widget.MaterialComponents.Button" />

        <!-- Bottom Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp" />

    </LinearLayout>

</ScrollView>
