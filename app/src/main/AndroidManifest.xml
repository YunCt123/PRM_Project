<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Internet permission for API calls -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Storage permissions for image upload -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PRM_Project"
        tools:targetApi="31">
        <activity
            android:name=".activies.MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Login Activity -->
        <activity
            android:name=".activies.LoginActivity"
            android:exported="false"
            android:label=""/>

        <!-- Register Activity -->
        <activity
            android:name=".activies.RegisterActivity"
            android:exported="false"
            android:label=""
            android:parentActivityName=".activies.LoginActivity" />

        <!-- Detail Activity -->
        <activity
            android:name=".ui.details.DetailActivity"
            android:exported="false"
            android:parentActivityName=".activies.MainActivity" />

        <!-- Booking Details Activity -->
        <activity
            android:name=".ui.booking.BookingDetailsActivity"
            android:exported="false"
            android:label="Chi tiết đặt xe"
            android:parentActivityName=".activies.MainActivity" />

        <!-- Payment Activity -->
        <activity
            android:name=".activies.PaymentActivity"
            android:exported="false"
            android:label="Thanh toán"
            android:parentActivityName=".activies.MainActivity" />

        <!-- Booking Result Activity - handles PayOS payment callbacks -->
        <activity
            android:name=".activies.BookingResultActivity"
            android:exported="true"
            android:label="Kết quả đặt xe"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- PayOS callback URL scheme -->
                <data android:scheme="evrentalapp" android:host="payment" />
            </intent-filter>
        </activity>

        <!-- Verify Account Activity -->
        <activity
            android:name=".activies.VerifyAccountActivity"
            android:exported="false"
            android:label="Xác minh tài khoản"
            android:parentActivityName=".activies.MainActivity" />

    </application>

</manifest>
